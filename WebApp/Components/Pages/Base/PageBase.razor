    /// 指定ページに遷移する
    /// </summary>
    /// <param name="url">対象ページのURL</param>
    protected async Task GotoPageAsync(string url)
    {
        // 現在のURLをセッションに格納する
        await SetAsync(SessionBeforeNavigateTo, Navigation.Uri);

        // 画面遷移
